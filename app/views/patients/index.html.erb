<div class="page-header">
  <%= link_to 'Nuevo Paciente', new_patient_path, :class => 'btn primary' %>
  <h1>Listado de pacientes modificado</h1>
</div>

<table class="table table-striped table-bordered table-condensed">
<thead>	
	  <tr>
	    <th>Nombre</th>
	    <th>Apellido</th>
	    <th>Identificacion</th>
	    <th>Sexo</th>
	    <th>Fecha Nacimiento</th>
	    <th>Ultima visita</th>
	    <th></th>
	  </tr>
  </thead>

<% @patients.each do |patient| %>
  <tr>
    <td><%= patient.first_name %></td>
    <td><%= patient.last_name %></td>
    <td><%= patient.identification %></td>
    <td><%= patient.sex %></td>
    <td><%= patient.birthdate %></td>
    <td>last visit date</td>
    <td><%= link_to 'Ver', patient %> | <%= link_to 'Editar', edit_patient_path(patient) %> | <%= link_to 'Eliminar', patient, confirm: 'Esta seguro?', method: :delete %></td>
  </tr>
<% end %>
</table>
