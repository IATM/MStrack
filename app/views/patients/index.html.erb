<h1>Listing patients</h1>

<table class="bordered-table zebra-striped">
<thead>	
	  <tr>
	    <th>First name</th>
	    <th>Last name</th>
	    <th>Identification</th>
	    <th>Sex</th>
	    <th>Birthdate</th>
	    <th>Last visit</th>
	    <th></th>
	  </tr>
  </thead>

<% @patients.each do |patient| %>
  <tr>
    <td><%= patient.first_name %></td>
    <td><%= patient.last_name %></td>
    <td><%= patient.identification %></td>
    <td><%= patient.sex %></td>
    <td><%= patient.birthdate %></td>
    <td>last visit date</td>
    <td><%= link_to 'Show', patient %> | <%= link_to 'Edit', edit_patient_path(patient) %> | <%= link_to 'Destroy', patient, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

